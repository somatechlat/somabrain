# SomaBrain Environment Configuration
# Copy this file to .env and customize for your environment

# Circuit breaker settings
SOMABRAIN_CIRCUIT_BREAKER_FAILURE_THRESHOLD=3
SOMABRAIN_CIRCUIT_BREAKER_RESET_INTERVAL=60.0
SOMABRAIN_CIRCUIT_BREAKER_COOLDOWN_PERIOD=5.0

# Outbox settings
SOMABRAIN_OUTBOX_DEFAULT_LIMIT=100
SOMABRAIN_OUTBOX_MAX_LIMIT=1000
SOMABRAIN_OUTBOX_TENANT_BATCH_LIMIT=50
SOMABRAIN_OUTBOX_MAX_RETRIES=5

# Memory service settings
SOMABRAIN_MEMORY_EMBED_DIM=256
SOMABRAIN_MEMORY_HRR_DIM=8192
SOMABRAIN_MEMORY_API_TIMEOUT=90
SOMABRAIN_MEMORY_DB_TIMEOUT=30

# Rate limiting
SOMABRAIN_RATE_RPS=100000
SOMABRAIN_RATE_BURST=100000
SOMABRAIN_WRITE_DAILY_LIMIT=100000000

# Planning
SOMABRAIN_PLAN_MAX_STEPS=5
SOMABRAIN_PREDICTOR_TIMEOUT_MS=250